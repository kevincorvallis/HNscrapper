# Flask Configuration
FLASK_ENV=development
SECRET_KEY=change-this-in-production
PORT=8083

# Data Configuration
JSON_OUTPUT=enhanced_hn_articles.json
DATABASE_URL=sqlite:///data/enhanced_hn_articles.db

# OpenAI Configuration (required for AI features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Scraping Configuration
USER_AGENT=HN-Enhanced-Scraper/1.0
REQUEST_DELAY=1.0
MAX_RETRIES=3
TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Optional: Database Configuration
# Uncomment and configure if using PostgreSQL instead of SQLite
# DATABASE_URL=postgresql://username:password@localhost/hndata

# Optional: Redis Configuration for caching
# REDIS_URL=redis://localhost:6379/0
